@model Product

<h2>Update @Model.Name</h2>

<form asp-action="UpdateProductToDatabase" asp-controller="Product" method="post">
    <input asp-for="ProductId" type="hidden"/>

    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" class="form-control" type="number" step="0.01"/>
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CategoryId" class="control-label"></label>
        <input asp-for="CategoryId" class="form-control" type="number" step="1.0" min="1" max="10"/>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="OnSale" class="control-label"></label>
        <select asp-for="OnSale" class="form-control">
            <option value="">Please select...</option>
            <option value="1">Yes</option>
            <option value="0">No</option>
        </select>
        <span asp-validation-for="OnSale" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="StockLevel" class="control-label"></label>
        <input asp-for="StockLevel" class="form-control" type="number" step="1.0" min="0"/>
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Update Product</button>
</form>